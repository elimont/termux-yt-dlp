--merge-output-format=mkv --embed-thumbnail --prefer-ffmpeg \
--extract-audio --audio-format m4a --format bestvideo+bestaudio/best --sponsorblock-mode=remove \
--no-mtime --no-abort-on-error --playlist-reverse \
